@page
@model YourProfileModel
@{
    ViewData["Title"] = "Profile Page for the Found User";
}

@if (Model.FoundUser != null)
{
    <div class="ProfileGrid">
        <div class="PG1"> <i class="fas fa-user-alt bubble float-left mr-2"></i> <h6 class="mb-0 pb-0 float-left position-relative font-weak">Full Name: </h6><h3 class="position-relative anim-Load" style="margin-top: 1.20rem; --i:1;"> @Model.FoundUser.FirstName @Model.FoundUser.LastName</h3> </div>
        <div class="PG2"> <i class="fas fa-at bubble float-left mr-2"></i><h6 class="mb-0 pb-0 float-left position-relative font-weak">Email: </h6> <h3 class="position-relative anim-Load" style="margin-top: 1.20rem; --i:2;"> @Model.FoundUser.Email </h3></div>
        <div class="PG3"> <i class="fas fa-phone bubble float-left mr-2"></i><h6 class="mb-0 pb-0 float-left position-relative font-weak">Phone Number: </h6> <h3 class="position-relative anim-Load" style="margin-top: 1.20rem; --i:3;">@Model.FoundUser.PhoneNumber</h3></div>
        <div class="PG4"> <i class="fas fa-car bubble float-left mr-2"></i><h6 class="mb-0 pb-0 float-left position-relative font-weak">License Plate:</h6><h3 class="position-relative anim-Load" style="margin-top: 1.20rem; --i:4;">@Model.FoundUser.LicensePlate</h3></div>
        <div class="PG5"> <a asp-page="/Index" class="ubutton neon" >Send Message To @Model.FoundUser.FirstName</a></div>
    </div>
}