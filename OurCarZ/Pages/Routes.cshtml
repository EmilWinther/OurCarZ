@page
@model OurCarZ.Pages.RoutesModel
@{
    ViewData["zipCode"] = "ZipCodeSearch";
}
<div class="routes-container">
    <h1>Routes</h1>
    <div class="row">
        <form method="post" style="margin-bottom: 30px;">
            <div class="col-sm">
                <input type="text" class="form-control mb-2" id="inlineFormInput" name="ZipCodeSearch" placeholder="Zip Code">
            </div>
            <div class="col-sm">
                <input type="date" class="form-control mb-2" name="dateOfRoute" id="dateOfRoute" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-sm">
                <button type="Filter" class="btn btn-primary">Sign in</button>
            </div>
        </form>
    </div>
        <div class="routes">
            @foreach (var route in Model.UsedRoutes)
            {
                <div class="card mb-3" style="height: 20rem">
                    <div class="card-header p-2">
                        <h5 class="card-title"><small class="text-muted">(@route.RouteId) </small>@route.StartPoint til @route.FinishPoint</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">Kører:</p>
                        <p class="card-text">Tidspunkt:</p>
                        <p class="card-text">Antal Pladser:</p>
                    </div>
                    <div class="card-footer">
                        <a class="btn" type="button" asp-page="Route" asp-route-id="@route.RouteId"><i class="fas fa-map-marked-alt"></i></a>
                    </div>
                </div>
            }
        </div>
    </div>
