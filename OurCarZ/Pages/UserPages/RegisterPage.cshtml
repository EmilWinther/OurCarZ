@page
@model OurCarZ.Pages.UserPages.RegisterPageModel
@{
    ViewData["Title"] = "Creates user";
}
<h1>Create account</h1>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div class="form-group">
                    <label asp-for="@Model.NewUser.FirstName" class="custom-control-label">First name</label>
                    <input asp-for="@Model.NewUser.FirstName" class="form-control" type="text" required />
                    <span asp-validation-for="NewUser.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.NewUser.LastName" class="custom-control-label">Last name</label>
                    <input asp-for="@Model.NewUser.LastName" class="form-control" type="text" required />
                    <span asp-validation-for="NewUser.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label  asp-for="@Model.NewUser.Email" class="custom-control-label">Email</label>
                    <input asp-for="@Model.NewUser.Email" class="form-control" type="email" required />
                    <span asp-validation-for="NewUser.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.NewUser.PhoneNumber" class="custom-control-label">Phone number</label>
                    <input asp-for="@Model.NewUser.PhoneNumber" class="form-control" type="tel" required />
                    <span asp-validation-for="NewUser.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.NewUser.LicensePlate" class="custom-control-label">Car <br /></label>
                    <p>If you're not a driver, this field is not necessary.</p>
                    <input asp-for="@Model.NewUser.LicensePlate" class="form-control" type="text" />
                </div>
                <div class="form-group">
                    <label asp-for="@Model.NewUser.Password" class="custom-control-label">Password</label>
                    <input asp-for="@Model.NewUser.Password" class="form-control" type="password" required />
                    <span asp-validation-for="NewUser.Password" class="text-danger"></span>
                    <label asp-for="@Model.ConfirmPass" class="custom-control-label">Confirm password</label>
                    <input asp-for="@Model.ConfirmPass" class="form-control" type="password" required />
                </div>
                <div class="form-group">
                    <input type="submit" value="Create account" class="btn btn-primary" />
                </div>

            </form>
        </div>
    </div>
    <a asp-page="Index">Home</a>