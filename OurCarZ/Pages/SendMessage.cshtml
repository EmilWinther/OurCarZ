@page
@model OurCarZ.Pages.SendMessageModel
@{
}
<h3>Send Message</h3>
<form class="form-horizontal" method="post">
    <br class="container">
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-2">From</div>
        <div class="col-4">
            <p>@Model.CurrentUser.FirstName @Model.CurrentUser.LastName</p>
        </div>
    </div>

    <div class="row">
        <div class="col-2">To</div>
        <div class="col-4">
            <p>@Model.FoundUser.FirstName @Model.FoundUser.LastName</p>
        </div>
    </div>
    </br>

    <div class="row">
        <div class="col-2">Message</div>
        <div class="col-4"><input type="text" asp-for="@Model.MessageText" id="@Model.MessageText" /></div>
    </div> </br>

    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">
            <input asp-route-page="/Profile" asp-route-id="@Model.CurrentUser.UserId" type="submit" id="sendButton" value="Send Message" />
        </div>
    </div>
    </div>
</form>

<a asp-route-page="/Profile" asp-route-id="@Model.CurrentUser.UserId"
       class="btn btn-success btn-group-lg pull-right">
        Back to My Profile
</a>