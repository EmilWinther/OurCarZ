@page
@model OurCarZ.Pages.Rating.RatingPageModel
@{
}

<h2>This is a page for rating.</h2>
<p>For whom do you want to rate?</p>
<form method="post">
    <h2>Rate a user by entering the following information </h2>
    <label for="usertoberated">Who's getting rated? Input by ID: </label>
    <input type="text" id="@Model.UserToBeRated" name="usertoberated"><br><br>
    <label for="Rating">What's the rating? A whole number, if you will: </label>
    <input type="text" id="@Model.Rating" name="Rating"><br><br>
    <label for="userrating">Which user is rating? Input by ID: </label>
    <input type="text" id="@Model.UserRating" name="userrating"><br><br>
    <input type="submit" value="Submit">
</form>